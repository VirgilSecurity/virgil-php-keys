<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         colors="true"
         verbose="true"
         stopOnFailure="true">
    <testsuites>
        <testsuite name="UnitTests">
            <directory suffix=".php">./tests/Tests/Unit</directory>
        </testsuite>
        <testsuite name="IntegrationTests">
            <directory suffix=".php">./tests/Tests/Integration</directory>
        </testsuite>
    </testsuites>
    <groups>
        <exclude>
            <group>f</group>
        </exclude>
    </groups>
</phpunit>
